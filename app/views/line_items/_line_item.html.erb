<% if line_item == @current_item %>
  <tr id="current_item">
<% else %>
  <tr>
<% end %>
  <td>
    <%=link_to "put back", decrement_path(line_item), remote: true%>
  </td>
  <td>
    <%= line_item.quantity%> 
  </td>
  <td>
   <%= line_item.product.title %>
  </td>
  <td class="item_price">
    <%= number_to_currency(line_item.total_price) %> 
  </td>
  <td>
    <%=link_to "Delete item", 
      line_item, method: :delete,
      data:{confirm: "Are you sure"}%>
  </td>
</tr>
